{
  "version": "1.0.0-*",

  "compilationOptions": {
    "warningsAsErrors": true,
    "emitEntryPoint": true
  },

  "dependencies": {
    "Microsoft.AspNetCore.Localization": "1.0.0-*",
    "Microsoft.AspNetCore.Server.Kestrel": "1.0.0-*",
    "Microsoft.Extensions.Localization": "1.0.0-*",
    "Microsoft.Extensions.Logging.Console": "1.0.0-*"
  },

  "commands": {
    "web": "LocalizationWebsite"
  },
  "frameworks": {
    "dnx451": { },
    "dnxcore50": { }
  },

  "exclude": [
    "wwwroot",
    "node_modules",
    "bower_components"
  ],
  "publishExclude": [
    "node_modules",
    "bower_components",
    "**.xproj",
    "**.user",
    "**.vspscc"
  ]
}
